// Styles

html, body
    margin 0
    padding 0
    width 100%
    height 100%
    background #fff

body
    font-size 15px
    font-family Helvetica, Arial, sans-serif
    color #555

a
    text-decoration none
    color #0073BD

a.gray
    color #aaa

a:hover, a:active
    color #679ddf

h1, h2, h3
    margin 0
    padding 0 10px
    font-family 'Crushed', sans-serif
    font-size 40px    
    line-height 50px
    border-bottom 1px solid #ccc

h2
    margin-top 40px
    font-size 25px
    line-height 35px
    -webkit-tap-highlight-color #f00

h3
    margin-top 40px
    font-size 20px
    line-height 30px

p
    margin 0
    padding 10px
    //border-bottom 1px solid #eee

ul
    margin 0
    padding 0
    list-style none

    li
        padding 0 10px
        line-height 40px
        border-bottom 1px solid #eee

    &.links li
        padding 0
    
        a
            display block
            padding 0 10px

            &:hover
                color #fff
                background #0099fc








