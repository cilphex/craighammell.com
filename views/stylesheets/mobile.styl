// Styles

html, body
    margin 0
    padding 0
    width 100%
    height 100%
    background #fff

body
    margin-bottom 40px
    font-size 14px
    font-family Helvetica, Arial, sans-serif
    color #555

a
    text-decoration none
    color #0073BD

a.gray
    color #aaa

a:hover, a:active
    color #679ddf

h1, h2, h3
    margin 0
    padding 0 10px
    font-family 'Crushed', sans-serif
    font-size 30px    
    line-height 40px
    border-bottom 1px solid #ccc

h2
    margin-top 40px
    font-size 20px
    line-height 30px

h3
    margin-top 40px
    font-size 15px
    line-height 25px

p
    margin 0
    padding 10px
    border-bottom 1px solid #eee

ul
    margin 0
    padding 0
    list-style none

ul li
    padding 0 10px
    line-height 40px
    border-bottom 1px solid #eee











