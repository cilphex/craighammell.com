// Styles

@font-face
    font-family 'BebasNeueuRegular'
    font-style normal
    font-weight normal
    //src local('BebasNeueuRegular')
    //src url('http://assets.craighammell.com/fonts/BebasNeue-webfont.eot') format('embedded-opentype')
    //src url('http://assets.craighammell.com/fonts/BebasNeue-webfont.woff') format('woff')
    //src url('http://assets.craighammell.com/fonts/BebasNeue-webfont.ttf') format('truetype')

html, body
    margin 0
    padding 0

body
    //font-family Helvetica, Arial, sans-serif
    font-family "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size 13px
    //line-height 20px
    color #555

a
    text-decoration none
    color #4f99ce
    border-bottom 1px solid #D5DEE5

    &:hover
        border-bottom 1px solid #82909A

a.gray,
.muted
    color #aaa

a:hover, a:active
    color #679ddf

h1
    //margin 20px 0 0
    //font-family 'BebasNeueuRegular', sans-serif
    //font-size 40px
    //font-weight normal
    //line-height 40px
    font-size 15px
    text-transform uppercase

h2, h3
    //margin 30px 0 2px
    //font-family 'BebasNeueuRegular', sans-serif
    //font-size 28px
    //font-weight normal
    //line-height 28px
    margin-top 40px
    font-size 13px

h3
    font-weight normal

h4
    margin 0
    font-size 13px
    font-weight normal
    line-height 13px
    color #aaa


div#content
    margin 30px auto
    padding 10px 60px
    width 800px

// Main

div.table
    p > span:first-child
        display inline-block
        width 160px

// plus one button

div#content div.plusone
    float right
    margin 8px 0 0

// Map page

div#map_canvas
    width 100%
    height 400px
    box-shadow 0 5px 25px rgba(0,0,0,0.15)

// Drawings

div.drawings

    div
        margin 0 0 120px
        text-align center

        img
            max-width 100%
            max-height 800px
            box-shadow 0 8px 55px rgba(0,0,0,0.15)
    p
        text-align center

// Image magnify

div#imagemagnify
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0,0,0,0.85)

    div.bar
        background rgb(0,0,0)
        border-bottom 1px solid rgba(255,255,255,0.2)

        .inner
            margin 0 auto
            padding 15px 0
            width 800px

        p
            color #fff

        p.title
            margin 0
            font-family 'BebasNeueuRegular', sans-serif
            font-size 40px
            font-weight normal
            line-height 40px

        p.description
            margin 0
            font-size 13px

    div.image
        position fixed
        top 90px
        left 0
        right 0
        bottom 0
        overflow hidden

        div.loader
            position fixed
            margin -32px 0 0 -57px
            top 50%
            left 50%
            width 110px
            height 61px
            // image is 31x31px
            background #000 url(/images/loaders/white-on-black.gif) center center no-repeat
            border-radius 32px
            border 2px solid rgba(255,255,255,0.2)

        img
            position absolute






