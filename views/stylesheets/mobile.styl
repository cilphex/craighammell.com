// Styles

@font-face
    font-family 'BebasNeueuRegular'
    font-style normal
    font-weight normal
    src local('BebasNeueuRegular')
    src url('http://assets.craighammell.com/fonts/BebasNeue-webfont.eot') format('embedded-opentype')
    src url('http://assets.craighammell.com/fonts/BebasNeue-webfont.woff') format('woff')
    src url('http://assets.craighammell.com/fonts/BebasNeue-webfont.ttf') format('truetype')

html, body
    margin 0
    padding 0
    width 100%
    height 100%
    background #fff

body
    font-size 15px
    font-family Helvetica, Arial, sans-serif
    color #555

a
    text-decoration none
    color #0073BD

a.gray
    color #aaa

a:hover, a:active
    color #679ddf

h1, h2, h3
    margin 0
    padding 0 10px
    font-family 'BebasNeueuRegular', sans-serif
    font-size 40px
    font-weight normal
    line-height 51px
    border-bottom 1px solid #ccc

h1
    margin-top 5px

h2
    margin-top 40px
    font-size 25px
    line-height 35px
    -webkit-tap-highlight-color #f00

h3
    margin-top 40px
    font-size 20px
    line-height 30px

p
    margin 0
    padding 10px
    //border-bottom 1px solid #eee

ul
    margin 0
    padding 0
    list-style none

    li
        padding 0 10px
        line-height 40px
        border-bottom 1px solid #eee

    &.links li
        padding 0
    
        a
            display block
            padding 0 10px

            &:hover
                color #fff
                background #0099fc

// Drawings

div.drawings

    div
        margin 20px 0 50px
        text-align center

        img
            max-width 94%
            max-height 380px
            box-shadow 0 8px 55px rgba(0,0,0,0.15)
    p
        text-align center





