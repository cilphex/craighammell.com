// Styles

html, body
    margin 0
    padding 0

body
    font-family Helvetica, Arial, sans-serif
    font-size 13px
    color #555

a
    text-decoration none
    color #0073BD

a.gray
    color #aaa

a:hover, a:active
    color #679ddf

h1
    margin 20px 0 10px
    font-family 'Crushed', sans-serif
    font-size 30px
    line-height 30px

h2, h3
    margin 30px 0 10px
    font-family 'Crushed', sans-serif
    font-size 22px
    line-height 22px

h3
    font-size 15px
    line-height 15px

h4
    margin 0
    font-size 13px
    font-weight normal
    line-height 13px
    color #aaa

div#content
    margin 40px auto
    width 800px

div#content p
    margin 0 0 20px
    line-height 20px

div#content ul
    margin 0 0 20px
    padding 0
    line-height 20px
    list-style none

div#map_canvas
    width 100%
    height 400px
    box-shadow 0 5px 25px rgba(0,0,0,0.15)



