// Styles

html, body
    margin 0
    padding 0

body
    font-family Helvetica, Arial, sans-serif
    font-size 14px
    color #555

a
    text-decoration none
    color #0073BD

a:hover, a:active
    color #00BD84

h1
    margin 20px 0 10px
    font-family 'Crushed', sans-serif
    font-size 30px
    line-height 30px

h2
    margin 30px 0 10px
    font-family 'Crushed', sans-serif
    font-size 20px
    line-height 20px

div#content
    margin 40px auto
    width 800px

div#content p
    margin 0 0 20px
    line-height 20px

div#content ul
    margin 0 0 20px
    padding 0
    line-height 20px
    list-style none




